<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="button_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >@android:color/darker_gray</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >1dp</item>
        <item name="android:textSize" >15dp</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>
    <style name="button_text_big" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >@android:color/darker_gray</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >5dp</item>
        <item name="android:textSize" >25dp</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>
    <style name="vertical_separator" >
        <item name="android:layout_height" >30dp</item>
        <item name="android:layout_width" >2dp</item>
        <item name="android:background" >#90909090</item>
        <item name="android:layout_marginBottom" >1dp</item>
        <item name="android:layout_marginTop" >10dp</item>
    </style>
    <style name="horizontal_separator" >
        <item name="android:layout_height" >1dp</item>
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:background" >@android:color/holo_blue_dark</item>
        <item name="android:layout_marginLeft">@dimen/basic_content_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/basic_content_margin_horizontal</item>
        <item name="android:layout_marginBottom" >2dp</item>
        <item name="android:layout_marginTop" >0dp</item>
    </style>
    <style name="horizontal_fragment_selector" >
        <item name="android:layout_height" >5dp</item>
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:background" >@android:color/holo_blue_dark</item>
        <item name="android:layout_marginBottom" >2dp</item>
        <item name="android:layout_marginTop" >0dp</item>
    </style>

    <style name="basic_page_layout">
        <item name="android:layout_marginBottom">@dimen/basic_page_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/basic_page_margin_vertical</item>
    </style>

    <style name="basic_frame_layout">
        <item name="android:layout_marginBottom">@dimen/basic_content_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/basic_content_margin_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="basic_textView">
        <item name="android:layout_marginLeft">@dimen/basic_content_margin_horizontal</item>
    </style>

    <style name="headline_text" parent="basic_textView">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    <style name="item_text" parent="basic_textView">
        <item name="android:textSize">@dimen/text_item</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    <style name="hint_text" parent="basic_textView">
        <item name="android:textSize">@dimen/text_hint</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="edit_text_name">
        <item name="android:maxLength">70</item>
        <item name="android:inputType">text</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
    </style>
</resources>
